# Database Configuration
DATABASE_URL=ecto://<username>:<password>@localhost/<database_name>

# Server Configuration
PORT=4000
PHX_HOST=localhost
PHX_SERVER=true

# Security Keys (Generate new ones for production!)
SECRET_KEY_BASE=
GUARDIAN_SECRET_KEY=

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Database Pool
POOL_SIZE=10

# Environment
MIX_ENV=dev

# Optional: Enable IPv6
# ECTO_IPV6=false

# Optional: DNS Cluster (for production)
# DNS_CLUSTER_QUERY=