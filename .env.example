# Database Configuration
DATABASE_URL=ecto://username:password@localhost/expense_tracker_api_dev

# Server Configuration
PORT=4000
PHX_HOST=localhost
PHX_SERVER=true

# Security Keys (Generate new ones for production!)
# Run: mix phx.gen.secret
SECRET_KEY_BASE=your_secret_key_base_here_change_in_production

# Run: mix guardian.gen.secret  
GUARDIAN_SECRET_KEY=your_guardian_secret_key_here_change_in_production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Database Pool Configuration
POOL_SIZE=10

# Environment
MIX_ENV=dev

# Optional: Enable IPv6
# ECTO_IPV6=false

# Optional: DNS Cluster (for production deployments)
# DNS_CLUSTER_QUERY=

# Production specific variables
# SSL Configuration (uncomment for HTTPS)
# SSL_KEY_PATH=priv/ssl/server.key
# SSL_CERT_PATH=priv/ssl/server.crt

# Logging level for production
# LOG_LEVEL=info